{
	"name": "bb-new",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"deploy": "opennextjs-cloudflare && wrangler deploy",
		"preview": "opennextjs-cloudflare && wrangler dev",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio --port 3333",
		"db:create-local": "pnpm dlx wrangler d1 create --local --config=wrangler.jsonc",
		"db:shell": "pnpm dlx wrangler d1 shell DB --local --config=wrangler.jsonc",
		"migrate": "pnpm dlx wrangler d1 migrations apply DB --config=wrangler.jsonc --local",
		"migrate:prod": "pnpm dlx wrangler d1 migrations apply DB --config=wrangler.jsonc"
	},
	"dependencies": {
		"next": "15.2.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250321.0",
		"@eslint/eslintrc": "^3",
		"@opennextjs/cloudflare": "0.5.x",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.30.5",
		"drizzle-orm": "^0.41.0",
		"eslint": "^9",
		"eslint-config-next": "15.2.3",
		"tailwindcss": "^4",
		"typescript": "^5",
		"wrangler": "^4.4.0"
	}
}